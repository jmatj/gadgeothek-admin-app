<UserControl x:Class="ch.hsr.wpf.gadgeothek.ui.tab.LoanTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ch.hsr.wpf.gadgeothek.ui.tab"
             mc:Ignorable="d" 
             Style="{StaticResource tabWindow}">
    <Grid>
        <ListBox ItemsSource="{Binding Loans}">
            <ListBox.ItemTemplate>
                <DataTemplate DataType="local:Loan">
                    <DockPanel HorizontalAlignment="Stretch">
                        <TextBlock Text="{Binding Gadget.Name}" />
                    </DockPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
